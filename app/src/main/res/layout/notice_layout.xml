<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:background="#4286f4"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="90dp"
            android:layout_height="50dp">

            <TextView
                android:id="@+id/song_name"
                android:layout_width="90dp"
                android:layout_height="25dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/song_artist"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_below="@+id/song_name"
                android:ellipsize="end"
                android:singleLine="true" />

        </RelativeLayout>


        <ImageButton
            android:id="@+id/notice_prev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@null"
            android:src="@drawable/ic_fast_rewind_white_24dp" />

        <ImageButton
            android:id="@+id/notice_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@null"
            android:src="@drawable/ic_pause_circle_outline_white_24dp" />

        <ImageButton
            android:id="@+id/notice_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@null"
            android:src="@drawable/ic_fast_forward_white_24dp" />

        <ImageButton
            android:id="@+id/exit_notice"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:scaleType="centerCrop"
            android:src="@drawable/exit" />

    </LinearLayout>
</LinearLayout>